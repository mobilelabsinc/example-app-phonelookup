<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ff000000</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:editTextStyle">@style/AppEditText</item>
        <item name="colorAccent">@color/mobile_labs_blue</item>
        <item name="colorPrimary">@color/mobile_labs_blue</item>
        <item name="colorPrimaryDark">@color/mobile_labs_dark_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorForeground">@color/mobile_labs_dark_blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/mobile_labs_dark_blue</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>

    <style name="AppButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/mobile_labs_red</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="AppEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTextViewLabel" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/mobile_labs_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AppThemeProductDetailsTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/mobile_labs_dark_blue</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppThemeProductDetailsLabel" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/mobile_labs_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AppThemeProductDetailsText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>