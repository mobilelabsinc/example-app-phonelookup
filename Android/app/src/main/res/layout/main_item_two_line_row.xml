<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorLinearlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:contentDescription="colorLinearlayout" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/osIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:contentDescription="osIcon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Curve"
                android:textSize="16sp"
                android:textStyle="bold"
                android:contentDescription="text1" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item ID"
                android:textSize="12sp"
                android:textStyle="normal"
                android:contentDescription="text2" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrier:Verizon"
                android:textSize="12sp"
                android:textStyle="normal"
                android:contentDescription="text3" />
        </LinearLayout>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out Of Stock"
            android:textSize="12sp"
            android:textStyle="normal"
            android:contentDescription="text4" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:gravity="right"
            android:text="199"
            android:textSize="16sp"
            android:textStyle="bold"
            android:contentDescription="text5" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:gravity="right"
            android:paddingRight="5px"
            android:text="99"
            android:textSize="12sp"
            android:textStyle="normal"
            android:contentDescription="text6" />
    </LinearLayout>

</LinearLayout>